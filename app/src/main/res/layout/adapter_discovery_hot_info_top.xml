<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_hot_info_head_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="@dimen/activity_horizontal_margin_small"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin_small"
        android:textColor="@color/black_text"
        android:textSize="16sp"
        tools:text="标题标题标题标题标题" />

    <ImageView
        android:id="@+id/iv_hot_info_head_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY" />


</LinearLayout>