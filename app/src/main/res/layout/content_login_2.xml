<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/email_login_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_timer_bg_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:background="@color/black">
    <!--tools:showIn="@layout/activity_login"-->

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin_2x"
        android:padding="@dimen/activity_vertical_margin"
        android:src="@drawable/ico_cancel_white" />
    <!--<com.dashuf.disp.mvp.viewsiews.widgets.CustomVideoView&ndash;&gt;-->
    <!--android:id="@+id/video_view"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:foreground="@color/splash_timer_bg_color" />-->

    <LinearLayout
        android:id="@+id/ll_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_cancel"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_2x"
        android:layout_marginRight="@dimen/activity_horizontal_margin_2x"
        android:layout_marginTop="@dimen/activity_vertical_margin_2x"
        android:orientation="vertical"
        android:visibility="visible"
        tools:visibility="visible">

        <TextView
            android:visibility="gone"
            style="@style/textfont_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/welcome_login_app"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_mobile"
                android:inputType="number"
                android:maxEms="11"
                android:maxLength="11"
                android:paddingBottom="@dimen/activity_vertical_margin_small"
                app:met_baseColor="@color/white"
                app:met_clearButton="true"
                app:met_floatingLabel="highlight"
                app:met_hideUnderline="true"
                app:met_singleLineEllipsis="@bool/met_edit_singleLineEllipsis"
                app:met_textColor="@color/white"
                app:met_textColorHint="@color/text_color_trans"
                app:met_underlineColor="@color/white" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignBottom="@+id/mobile"
                android:layout_marginBottom="@dimen/appbar_padding_top"
                android:background="@color/white_bg_trans" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin_small">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_password"
                android:imeActionLabel="@string/action_sign_in"
                android:imeOptions="actionSend"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/activity_vertical_margin_small"
                app:met_baseColor="@color/white"
                app:met_floatingLabel="highlight"
                app:met_hideUnderline="true"
                app:met_singleLineEllipsis="@bool/met_edit_singleLineEllipsis"
                app:met_textColor="@color/white"
                app:met_textColorHint="@color/text_color_trans"
                app:met_underlineColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignBottom="@+id/password"
                android:layout_marginBottom="@dimen/appbar_padding_top"
                android:background="@color/white_bg_trans" />

            <ImageView
                android:id="@+id/iv_hide_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/password"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/activity_vertical_margin_small"
                android:layout_marginRight="7dp"
                android:padding="@dimen/activity_vertical_margin_small"
                android:src="@drawable/ico_hide_mony_white" />
            app:met_clearButton="true"
        </RelativeLayout>


        <TextView
            android:id="@+id/forget_pwd_button"
            style="@style/textfont_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin_small"
            android:foregroundGravity="center_vertical"
            android:gravity="right"
            android:text="@string/action_forget_pwd"
            android:textColor="@color/gray_e6" />

        <Button
            android:id="@+id/sign_in_button"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:focusableInTouchMode="true"
            android:background="@drawable/round_conner_bg_color_primary"
            android:text="@string/action_sign_in"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_opt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_cancel"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_2x"
        android:layout_marginRight="@dimen/activity_horizontal_margin_2x"
        android:layout_marginTop="@dimen/activity_vertical_margin_2x"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/textfont_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="@string/welcome_login_app"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/mobile_opt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_mobile"
                    android:inputType="number"
                    android:maxEms="11"
                    android:maxLength="11"
                    android:paddingBottom="@dimen/activity_vertical_margin_small"
                    app:met_baseColor="@color/white"
                    app:met_clearButton="true"
                    app:met_floatingLabel="highlight"
                    app:met_hideUnderline="true"
                    app:met_singleLineEllipsis="@bool/met_edit_singleLineEllipsis"
                    app:met_textColor="@color/white"
                    app:met_textColorHint="@color/text_color_trans"
                    app:met_underlineColor="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignBottom="@+id/mobile_opt"
                    android:layout_marginBottom="@dimen/appbar_padding_top"
                    android:background="@color/white_bg_trans"
                    android:visibility="visible" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/password_opt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin_small"
                    android:hint="@string/prompt_otp"
                    android:imeActionLabel="@string/action_sign_in"
                    android:imeOptions="actionSend"
                    android:inputType="number"
                    android:paddingBottom="@dimen/activity_vertical_margin_small"
                    app:met_baseColor="@color/white"
                    app:met_clearButton="false"
                    app:met_floatingLabel="highlight"
                    app:met_hideUnderline="true"
                    app:met_singleLineEllipsis="@bool/met_edit_singleLineEllipsis"
                    app:met_textColor="@color/white"
                    app:met_textColorHint="@color/text_color_trans"
                    app:met_underlineColor="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignBottom="@+id/password_opt"
                    android:layout_marginBottom="@dimen/appbar_padding_top"
                    android:background="@color/white_bg_trans" />

                <TextView
                    android:id="@+id/tv_getOtp"
                    style="@style/textfont_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/password_opt"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="@string/get_otp"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin_small">

                <TextView
                    android:id="@+id/tv_voice_opt"
                    style="@style/textfont_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:clickable="false"
                    android:enabled="false"
                    android:gravity="right"
                    android:text="@string/action_get_otp_again"
                    android:textColor="@color/gray_e6" />

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/sign_in_button_opt"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:text="@string/action_sign_in"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/agreement_checkBox_opt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:checked="true"
                android:gravity="center_vertical"
                android:scaleX="0.60"
                android:scaleY="0.60"
                android:visibility="visible" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_tip"
                style="@style/textfont_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.5dp"
                android:layout_toRightOf="@+id/agreement_checkBox_opt"
                android:lineSpacingExtra="3dp"
                android:paddingBottom="@dimen/activity_horizontal_margin_2x"
                android:text="@string/action_agreement_all"
                android:textColor="@color/gray_e6"
                android:visibility="visible"
                tools:text="撒发生的发生发生的发顺丰大是大非；链接 ；接口；开酒器而案发" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/opt_login"
            style="@style/textfont_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_vertical_margin_2x"
            android:layout_toLeftOf="@+id/view_center_flag"
            android:drawablePadding="@dimen/activity_vertical_margin"
            android:drawableTop="@drawable/opt_login"
            android:text="@string/action_login_otp"
            android:textColor="@color/white" />

        <View
            android:id="@+id/view_center_flag"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/tv_wxlogin"
            style="@style/textfont_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/activity_vertical_margin_2x"
            android:layout_toRightOf="@+id/view_center_flag"
            android:drawablePadding="@dimen/activity_vertical_margin"
            android:drawableTop="@drawable/wechat_login"
            android:text="@string/wechat_login"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>