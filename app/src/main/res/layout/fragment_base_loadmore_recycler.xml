<?xml version="1.0" encoding="utf-8"?>

<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg">

    <com.jess.arms.widget.loadingview.XLoadingView
        android:id="@+id/base_load_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/base_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:requiresFadingEdge="none"
            android:scrollbars="none" />

    </com.jess.arms.widget.loadingview.XLoadingView>


    <com.scwang.smartrefresh.layout.footer.ClassicsFooter
        android:id="@+id/base_foot_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_bg"
        app:srlAccentColor="@color/gray_dark_bg"
        app:srlDrawableArrowSize="0dp"
        app:srlTextSizeTitle="12sp" />

</com.scwang.smartrefresh.layout.SmartRefreshLayout>





